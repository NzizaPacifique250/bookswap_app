rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read and write access to all documents for all users
    // WARNING: This gives full access to anyone. Use only for development/testing.
    // For production, implement proper authentication and authorization rules.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}

